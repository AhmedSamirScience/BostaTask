<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BostaTask" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="dialogs_btn_style">
        <item name="android:layout_marginTop">@dimen/_10sdp</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:gravity">center</item>
        <item name="android:text">@string/ok</item>
        <item name="android:layout_width">@dimen/_80sdp</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="user_titles_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:visibility">gone</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textSize">@dimen/_29sdp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">@dimen/_10sdp</item>
        <item name="android:layout_marginTop">@dimen/_20sdp</item>
        <item name="android:layout_marginEnd">@dimen/_3sdp</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="roundedCornersImageViewGiftCoupon" >
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/_9sdp</item>
    </style>

</resources>